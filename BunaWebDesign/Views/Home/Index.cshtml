@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}
@using BunaWebDesign.Models;


@{
    var data = (RootHome)ViewData["data"];
}



<div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/H1.jpg" alt="First slide">
                <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%" fill="#777" /></svg>
                <div class="container">
                    <div class="carousel-caption text-left">
                        <h1>Crafted by Artisans</h1>
                        <p>Our timeless style are thoughtfully sourced and crafted by artisans</p>
                        <p><a class="btn btn-lg btn-primary" href="/LoginMaster/Registration" role="button">Sign up today</a></p>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/H2.jpeg" alt="Second slide">
                <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%" fill="#777" /></svg>
                <div class="container">
                    <div class="carousel-caption">
                        <h1>Craftmanship that celebrate the feminine figure.</h1>
                        <p> Our pieces are created for you, to empower, cherish and bring that vivacious and expressive spirit to life..</p>
                        @*<p><a class="btn btn-lg btn-primary" href="/Collections/Index " role="button">Learn more</a></p>*@
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/images/H3.jpeg" alt="Third slide">
                <svg class="bd-placeholder-img" width="100%" height="100%" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img"><rect width="100%" height="100%" fill="#777" /></svg>
                <div class="container">
                    <div class="carousel-caption text-right">
                        <h1>To recapture a new way of life.</h1>
                        <p>Intersection of local and global, traditional and innovative, classic and contemporary.</p>
                        @*<p><a class="btn btn-lg btn-primary" href="/Collections/Index/all_collections" role="button">Browse gallery</a></p>*@
                    </div>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

</div>

<div style="width:100%; padding:25px;">
    <div style="width: 38rem;float:left; text-align:right">
        <img src="~/images/A24.jpg" width="80%" height="80%" />
    </div>
    <div style="width:40rem;float:right;padding:25px;">
        <h4>ABOUT US</h4>
        <p>
            This website aims to recapture a new way of life.It is about all of us finding ourselves in this path of life, our souls, to feel, see, and experience a divine quality. Ahmev taps into that sense of poise, beauty, and freedom that so compliments the female spirit, whose distinctive style is an expression of their individuality. Our pieces are created for you, to empower, cherish and bring that vivacious and expressive spirit to life.
            one that is rooted in culture,
            craft and community.we believe in looking back while moving forward. this is about slow living with sustainability
            at its heart. for us the process is as important as the product.you will discover a ready to wear collection sculpted to be the perfect fit with effortless silhouettes, memorable design and craftmanship that celebrate the feminine figure.
        </p>
    </div>
</div>

<div style="clear:both;"></div>
<center style="margin:30px;"><h3>New Collections</h3></center>
<div>
    <div class="container">
        @for (int i = 0; i < @data.Row.Count; i++)
        {

            <div class="square">
                <div class="card" style="width: 22rem; float:left; margin:10px;">
                    <img src="~/images/Product/@data.Row[i].Images" class="card-img-top" width="25%" height="25%" />
                    <div class="card-body">
                        <h5 class="card-title">@UIHelper.DoSubstring(data.Row[i].Product_Title, 25)</h5>
                        <p class="card-text">@UIHelper.DoSubstring(data.Row[i].Description1, 100)</p>
                        <a href="/Collections/Index/All-Collection" class="btn btn-primary">Go somewhere</a>
                    </div>

                </div>
            </div>
        }

    </div>
</div>

<div style="clear:left"></div>

</div>