@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using BunaWebDesign.Models;

@{
    var data = (RootCollection)ViewData["data"];


}

@{
    var id = Request.Url.Segments[3].Replace('-',' ');
    
}

<div class="alert alert-dark" role="alert">
    <h5 class="alert-heading">@id</h5>
</div>
    

<div class="container">
    @for (int i = 0; i < @data.Row.Count; i++)
    {
        <div class="square">
            <div class="card" style="width: 22rem; float:left; margin:10px;">
                <img src="~/images/Product/@data.Row[i].Images" class="card-img-top" width="25%" height="25%" />
                <div class="card-body">
                    <h5 class="card-title">@data.Row[i].Product_Title</h5>
                    
                        @*<div class="alert-link"><h3>Rs. @data.Row[i].Price</h3></div>*@
                    
                    <p class="card-text"></p>
                    <p class="card-text">@UIHelper.DoSubstring(data.Row[i].Description,60)</p>
                    <a href="/Collections/Index/all-collections" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>

    }
</div>

<div style="clear:both;"></div>
